<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="420dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/study_room"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão central esquerdo -->
    <Button
        android:id="@+id/btnLeftCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esquerda"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRightCenter"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginEnd="16dp"/>


    <!-- Botão central direito -->

    <LinearLayout
        android:id="@+id/llCauldron"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#600000ff"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/btnRightCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnRightCenter"
        />

    <Button
        android:id="@+id/btnRightCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direita"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnLeftCenter"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginStart="16dp"/>
    <!-- Label do nome do deck para estudo    -->
    <TextView
        android:id="@+id/tvDeckName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um deck."
        android:textSize="15sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnRightCenter"
        app:layout_constraintStart_toStartOf="@id/btnRightCenter"
        app:layout_constraintEnd_toEndOf="@id/btnRightCenter"
        android:layout_marginTop="0dp"/>


    <!-- Botão inferior esquerdo -->
    <Button
        android:id="@+id/btnReturnToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"/>

    <!-- Painel na esquerda -->
    <FrameLayout
        android:id="@+id/leftOverlay"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:background="#4d7a46"
        android:visibility="gone"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <ImageButton
            android:id="@+id/btnCloseOverlay"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Fechar"
            android:layout_gravity="top|end"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvOverlayTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minha Lista"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/tvAdd"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>



