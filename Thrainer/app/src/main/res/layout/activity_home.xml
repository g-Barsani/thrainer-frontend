<!-- app/src/main/res/layout/activity_home.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <!-- Imagem de fundo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/porta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Overlay semitransparente (aparece junto com o modal) -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4DFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Modal centralizado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/modalContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFF"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Conteúdo do modal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Título do modal -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thrainer"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>



            <!-- Botão 1 -->
            <Button
                android:id="@+id/btnGoToStudyRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#0a7ea4"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Laboratório do Mago"
                android:textColor="#fff"
                android:textStyle="bold" />

            <!-- Botão 2 -->
            <Button
                android:id="@+id/btnGoToCommunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/rounded_button"
                android:backgroundTint="#0a7ea4"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Feitiços da Comunidade"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Sair"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logout" />
</androidx.constraintlayout.widget.ConstraintLayout>